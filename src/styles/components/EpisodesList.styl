@require '../variables'

.episodesList
  position: absolute
  top: 0
  overflow-y: auto
  overflow-x: hidden
  height: 600px
  background: #263238
  width: 100%
  border-radius: 2px
  box-shadow: 0px 15px 12px 0px rgba(0,0,0,0.22), 0px 19px 38px 0px rgba(0,0,0,0.30)
  padding: 1em 0
  box-sizing: border-box
  background-size: cover

.episode
  display: flex
  padding: 1em 2em
  cursor: pointer

  &:hover
    background-color: rgba(0,0,0,0.1)

  &--active
    color: $accent
    background-color: rgba(0,0,0,0.2)


  &__name
    white-space: nowrap
    text-overflow: ellipsis
    overflow: hidden
    min-width: 0

  &__number
    display: block
    padding-right: 2em
    width: 1em
    text-align: right
    flex-shrink: 0
