.card
  background-size: cover
  flex: 1 210px
  border-radius: 2px
  box-shadow: 0px 1px 2px 0px rgba(0,0,0,0.20), 0px 1px 3px 0px rgba(0,0,0,0.10)
  margin: 7px
  cursor: pointer
  font-size: 0
  transition: 0.2s ease-out
  position: relative
  color: white

  &--hidden
    opacity: 0
    transform: scale(0.4)

.image
  width: 100%
  height: 100%
  border-radius: 2px
