.person
  width: 200px
  transition: 0.2s ease-out
  position: relative
  color: white
  margin: auto
  cursor: pointer

  &--hidden
    opacity: 0
    transform: scale(0.4)

.image
  width: 100%
  height: 100%
  border-radius: 2px
  box-shadow: 0px 15px 12px 0px rgba(0,0,0,0.22), 0px 19px 38px 0px rgba(0,0,0,0.30)

.name
  display: block
  padding-top: 2em
